<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.hannam.multi.cricket.common.mapper.UserMapper">
    <select id="selectUser" resultType="kr.ac.hannam.multi.cricket.vo.UserVO">
        SELECT USER_NO
               , USER_EMAIL
               , USER_PASSWORD
               , USER_NAME
               , USER_NICKNAME
               , USER_REGION
               , USER_PROFILE_IMG
               , USER_PHONE
               , USER_CREATED_AT
          FROM USERS
         WHERE USER_EMAIL=#{username}
    </select>
</mapper>